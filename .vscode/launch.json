{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch TS",
      "program": "./dist/out-tsc/aoc.js",
      "runtimeArgs": [
        "--experimental-specifier-resolution=node",
      ],
      "args": [
        "${fileBasenameNoExtension}",
        "${input:input}"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/out-tsc/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch TS (term)",
      "program": "./dist/out-tsc/aoc.js",
      "console": "integratedTerminal",
      "runtimeArgs": [
        "--experimental-specifier-resolution=node",
      ],
      "args": [
        "${fileBasenameNoExtension}",
        "${input:input}"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/out-tsc/**/*.js"
      ]
    },
    {
      "name": "ng serve",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4200/"
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html"
    }
  ],
  "inputs": [
    {"id": "input", "type": "pickString", "description": "Select input file", "options": ["sample.txt", "input.txt"]},
    {
      "id": "pickFile",
      "type": "command",
      "command": "extension.command.variable.file.pickFile",  //extension.commandvariable.file.pickFile",
      "args": {
        "include": "*",
        "display": "fileName",
        "description": "Input file to process",
        "showDirs": false,
        "fromFolder": { "fixed": "${fileDirname}"}
      }
    }
  ]
}
